{
    "name": "server",
    "version": "1.0.0",
    "main": "index.ts",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^18.7.15",
        "nodemon": "^2.0.19",
        "tsc": "^2.0.4",
        "typescript": "^4.8.2"
    },
    "scripts": {
        "start": "node output/build/index.js",
        "build": "yarn tsc --outDir output/build/ index.ts",
        "buildAndRun": "yarn tsc --outDir output/dev/ index.ts && node output/dev/index.js",
        "dev": "nodemon --ext ts --exec yarn buildAndRun || exit 1"
    }
}
